<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Simple Starting Sample", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- People Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="peopleDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            People
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="peopleDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("People", "Group")">Complete List of People</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="~/HTML/Person01.html">Lesedi Magondo</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Person02.html">Ashleigh Hulett</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Person03.html">Khanyisile Mazibuko</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Person04.html">Ntsika Mazamisa</a></li>
                            <li><a class="dropdown-item" href="~/HTML/Person05.html">Unathi Ledwaba</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/site.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
